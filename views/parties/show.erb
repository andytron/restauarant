<h2><%= @party.name %></h2>
<h3>Party Details</h3>
<ul>
	<li>Table Number: <%= @party.table_id %></li>
	<li>Number of Guests: <%= @party.number_guests %></li>
	<li>Meal Paid? <%= @party.meal_paid %></li>
</ul>

<h3>Order Details</h3>
<form action="/meals" method="POST">
<% @party.number_guests.times.each do |guest| %>
	<select name="meal[food_id]">
		<% @foods.each do |food| %>
			<option name="meal[food_id]" value="<%= food.id %>"><%= food.name %></option>
		<% end %>
	</select>
	<br>
<% end %>

	<input type="submit" value="Add Order"><br>	
</form>


<h3>Party Options</h3>
<ul>
	<a href="/parties/<%= @party.id %>/edit">Edit Party</a>

	<form action="/parties/<%= @party.id %>" method="POST">
		<input type="hidden" name="_method" value="DELETE">
		<input type="submit" value="Delete Party">
	</form>
</ul>

