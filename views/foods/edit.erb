<h2>Edit <%= @food.name %></h2>

<form action="/foods/<%= @food.id %>" method="POST">
	Name: <input type="text" name="food[name]" value="<%= @food.name %>"><br>
	Cuisine Type: <input type="text" name="food[cuisine_type]" value="<%= @food.cuisine_type %>"><br>
	Price: $<input type="text" name="food[price]" value="<%= @food.price %>"><br>
	Vegetarian?
	<input checked="checked" name="food[vegetarian]" type="radio" value="true">True <input name="food[vegetarian]" type="radio" value="false">False

	<input type="hidden" name="_method" method="PATCH">
	<input type="submit" value="Submit Edit"><br>
</form>

<form action="/foods/<%= @food.id %>" method="POST">
	<input type="hidden" name="_method" value="DELETE">
	<input type="submit" value="Delete Food Item">
</form>